# Mailtrap Configuration for Sandbox Environment
# Copy this file to .env and update with your actual values

# Email Provider Configuration
EMAIL_PROVIDER=mailtrap
EMAIL_FROM_ADDRESS=noreply@sahajaswalayan.com
EMAIL_FROM_NAME=Sahaja Swalayan

# Mailtrap Sandbox Configuration
# Get your API token from: https://mailtrap.io/api_tokens
MAILTRAP_API_TOKEN=your-mailtrap-api-token-here

# Sandbox Settings
MAILTRAP_SANDBOX_ENABLED=true
# Optional: Specific inbox ID (leave empty to use default inbox)
MAILTRAP_SANDBOX_INBOX_ID=

# Application Configuration
APP_CONFIRMATION_BASE_URL=http://localhost:8080/api/auth/confirm

